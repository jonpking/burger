<h1>Eat Da Burger!</h1>

<h3>Not Devoured</h3>
<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                <p>Type: {{burger_name}}</p>
                <button class="eat-burger" data-id="{{id}}" data-devoured="{{devoured}}">Eat Burger</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h3>Devoured</h3>
<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
                <p>Type: {{burger_name}}</p>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="add-burger">
    <div class="form-group">
        <label for="newBurgerTextBox">Burger Name: </label>
        <input type="text" id="newBurgerTextBox" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>
